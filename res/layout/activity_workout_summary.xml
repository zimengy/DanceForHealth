<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heart"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PrevWorkoutActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is the summary of your workout: " />

        <TextView
            android:id="@+id/workoutType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your workout was " />
        
                        <TextView
            android:id="@+id/workoutLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You worked out for" />

        <TextView
            android:id="@+id/workoutRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/workoutSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of steps taken: " />

        <TextView
            android:id="@+id/workoutWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You weighed in at: " />

        <TextView
            android:id="@+id/workoutHR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="And your Heartrate was: " />
        


        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:background="@drawable/custom_button"
            android:onClick="onUpdateButtonClick"
            android:text="Update Workout" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="39dp"
            android:background="@drawable/custom_button"
            android:onClick="onHomeClick"
            android:text="Home" />
    </LinearLayout>

</RelativeLayout>